{
  "groups": [
    "aws",
    "ubuntu-trusty"
  ],
  "task": {
    "image": {
      "source": {
        "repository": "concourse/bosh-io-stemcell-resource"
      }
    },
    "run": {
      "path": "bash",
      "args": [
        "-c",
        (
          [
            "curl -o result/stemcell.tgz $( cat stemcell/url | sed 's/light-//' )",
            "&& tar -xOzf stemcell/stemcell.tgz stemcell.MF > /tmp/stemcell.MF",
            "&& mkdir result/.datapact",
            "&& jq -nc ",
            "--arg name \"$( grep '^name: ' < /tmp/stemcell.MF | awk '{ print $2 }' )\"",
            "--arg version \"$( cat stemcell/version )\"",
            "'{name:$name,version:$version}|to_entries[]' > result/.datapact/metadata.json"
          ]
          | join(" ")
        )
      ]
    }
  },
  "input": [
    {
      "alias": "stemcell",
      "resource": {
        "type": "bosh-io-stemcell",
        "source": {
          "name": "bosh-aws-xen-ubuntu-trusty-go_agent"
        }
      }
    }
  ]
}
